[global]
    ### Display ###

    monitor = 0
    follow = keyboard

    origin = top-right
    width = 500
    height = 300
    offset = 10x50

    indicate_hidden = yes
    shrink = true
    transparency = 0
    separator_height = 2
    padding = 22
    horizontal_padding = 22
    frame_width = 3
    corner_radius = 6

    separator_color = auto
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = FiraCode Nerd Font, Font Awesome 5 Free Solid 9
    line_height = 0

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%a</b>\n%s\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = true
    ellipsize = middle
    ignore_newline = false
    stack_duplicates = true
    hide_duplicate_count = true
    show_indicators = true

    ### Icons ###
    icon_position = left
    max_icon_size = 128
    icon_path = /usr/share/icons/Nord-Icon/48x48/status/:/usr/share/icons/Nord-Icon/48x48/devices/:/usr/share/icons/Nord-Icon/48x48/apps

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/urxvt -e fzf:
    browser = /usr/bin/linkhandler
    always_run_script = false
    title = Dunst
    class = Dunst
    force_xinerama = false

